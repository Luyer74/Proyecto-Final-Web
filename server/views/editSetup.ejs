<%- include ("./templates/_header") %>
  <section class="registration py-5">
    <div class="row px-5 align-items-center">
      <div class="col">
        <h1 class="h1 pb-5">Editar <%= list.name %> </h1>
        <div class="row reg-form shadow rounded">
          <div class="col">
            <form action="/lists/<%= list._id %>/edit" method="POST">
              <div class="container">

                <div class="row justify-content-left">
                  <div class="col">
                    <div class="form-group">
                      <label for="name">Nombre</label>
                      <input type="text" class="form-control" id="name" name="name" placeholder="Ej. Setup Gamer" value="<%= list.name %>">
                    </div>
                  </div>
                </div>

                <div class="row justify-content-left">
                  <div class="col">
                    <div class="form-group">
                      <label for="description">Descripcion</label>
                      <textarea class="form-control" id="description" name="description" rows="5"><%=list.description%></textarea>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col">
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Editar lista</button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

  </section>

  <%- include ("./templates/_footer") %>